<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/black"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:ignore="MissingConstraints">

    <Button
        android:id="@+id/button1"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:background="@drawable/find_view_pager1_one" />

    <TextView
        android:id="@+id/text1_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/button1"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:text="For You To Be Here"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/text1_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/text1_1"
        app:layout_constraintTop_toTopOf="@id/text1_1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:text="- Tom Rosenthal"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="#CAAC"/>

    <TextView
        android:id="@+id/text1_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text1_1"
        app:layout_constraintTop_toBottomOf="@id/text1_1"
        android:layout_marginTop="5dp"
        android:text="一旦得到对方 爱就会停止生长"
        android:textStyle="bold"
        android:textSize="13dp"
        android:textColor="#CAAC"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        app:layout_constraintBottom_toTopOf="@+id/button2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/text1_3"
        android:background="#2AAC"/>

    <Button
        android:id="@+id/button2"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/button1"
        android:layout_marginTop="10dp"
        android:background="@drawable/find_view_pager1_two" />

    <TextView
        android:id="@+id/text2_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/button2"
        app:layout_constraintTop_toTopOf="@+id/button2"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:text="I Will"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/text2_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/text2_1"
        app:layout_constraintTop_toTopOf="@id/text2_1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:text="- Imaginary Future"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="#CAAC"/>

    <TextView
        android:id="@+id/text2_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text2_1"
        app:layout_constraintTop_toBottomOf="@id/text2_1"
        android:layout_marginTop="5dp"
        android:text="你是我的漫漫余生 斩钉截铁的理想"
        android:textStyle="bold"
        android:textSize="13dp"
        android:textColor="#CAAC"/>

    <View
        android:layout_width="0dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        app:layout_constraintBottom_toTopOf="@+id/button3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/text2_3"
        android:background="#2AAC"/>

    <Button
        android:id="@+id/button3"
        android:layout_width="60dp"
        android:layout_height="60dp"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        android:layout_marginTop="10dp"
        android:background="@drawable/find_view_pager1_three" />

    <TextView
        android:id="@+id/text3_1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/button3"
        app:layout_constraintTop_toTopOf="@+id/button3"
        android:layout_marginTop="5dp"
        android:layout_marginStart="10dp"
        android:text="5000 Miles"
        android:textStyle="bold"
        android:textSize="18dp"
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/text3_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toEndOf="@+id/text3_1"
        app:layout_constraintTop_toTopOf="@id/text3_1"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:text="- Dave Thomas Junior"
        android:textStyle="bold"
        android:textSize="12dp"
        android:textColor="#CAAC"/>

    <TextView
        android:id="@+id/text3_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="@+id/text3_1"
        app:layout_constraintTop_toBottomOf="@id/text3_1"
        android:layout_marginTop="5dp"
        android:text="似你走了五千英里 未诉归期"
        android:textStyle="bold"
        android:textSize="13dp"
        android:textColor="#CAAC"/>

</androidx.constraintlayout.widget.ConstraintLayout>